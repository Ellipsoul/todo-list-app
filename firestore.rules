rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can read and write their own todos
    match /users/{userId}/todos/{todoId} {
      allow read, write: if isOwner(userId);
    }
    
    // Users can read and write their own subscription
    match /users/{userId}/subscription/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Users can read stripeCustomers for reverse lookup
    // Server-side writes happen via webhook (bypasses rules)
    match /stripeCustomers/{stripeCustomerId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}

