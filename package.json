{
  "name": "todo-list-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:component:open": "cypress open --component",
    "cy:component:run": "cypress run --component",
    "emulators:start": "firebase emulators:start",
    "emulators:exec": "firebase emulators:exec --",
    "dev:emulator": "NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true USE_FIREBASE_EMULATOR=true npm run dev",
    "cy:run:emulator": "firebase emulators:exec -- \"NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true USE_FIREBASE_EMULATOR=true npm run cy:run\"",
    "test:emulator": "firebase emulators:exec -- \"NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true USE_FIREBASE_EMULATOR=true npm run cy:run\""
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.6.0",
    "next": "16.0.1",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/webpack-dev-server": "^5.1.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^15.6.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "firebase-tools": "^13.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
